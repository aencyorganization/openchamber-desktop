{
  "name": "openchamber-desktop",
  "version": "1.1.0",
  "description": "Desktop launcher for OpenChamber - Cross-platform OpenCode GUI",
  "main": "bin/neutralino-linux_x64",
  "bin": {
    "openchamber-desktop": "./bin/cli.js",
    "ocd": "./bin/cli.js"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js && echo 'Run \"openchamber-desktop --install-system\" to add to system menu'",
    "start": "node bin/cli.js",
    "dev": "neu run",
    "build": "neu build",
    "build:release": "neu build --release",
    "build:appimage": "node scripts/build/build-appimage.js",
    "install:system": "node scripts/install/install.js",
    "uninstall:system": "node scripts/uninstall/uninstall.js",
    "test": "node scripts/tests/installation-tests.js",
    "test:install": "node scripts/tests/installation-tests.js",
    "verify": "node scripts/tests/installation-tests.js",
    "test:bun": "bun run scripts/tests/installation-tests.js",
    "start:bun": "bun run bin/cli.js",
    "postinstall:bun": "bun run scripts/postinstall.js"
  },
  "keywords": [
    "openchamber",
    "opencode",
    "ai",
    "coding-assistant",
    "desktop",
    "launcher",
    "neutralino"
  ],
  "author": "Aency Organization",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aencyorganization/openchamber-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/aencyorganization/openchamber-desktop/issues"
  },
  "homepage": "https://github.com/aencyorganization/openchamber-desktop#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "files": [
    "bin/",
    "resources/",
    "scripts/install/",
    "scripts/uninstall/",
    "scripts/lib/",
    "neutralino.config.json",
    "LICENSE",
    "README.md",
    "README.pt.md",
    "README.es.md",
    "README.fr.md",
    "README.de.md"
  ],
  "devDependencies": {
    "@neutralinojs/neu": "^11.7.0",
    "neutralino-appimage-bundler": "^1.3.4"
  }
}
